<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lighting"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Battery Optimizer"
                android:textColor="#000"
                android:fontFamily="@font/nexa_bold"
                android:textSize="22dp"
                />


        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_marginTop="-100dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tabs-->
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tab_signin"
                            android:layout_marginTop="10dp"
                            android:text="Sign In"
                            android:textColor="#000"
                            android:fontFamily="@font/nexa_bold"
                            android:textSize="22dp"
                            />

                        <LinearLayout

                            android:id="@+id/ll_signin_line"
                            android:layout_marginTop="10dp"
                            android:layout_width="50dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="@color/theme_primary_light"
                            android:orientation="horizontal"/>


                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="center"
                            android:textColor="@color/light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:id="@+id/tab_signup"
                            android:background="@android:color/white"
                            android:text="Sign Up"
                            android:fontFamily="@font/nexa_bold"
                            android:textSize="22dp"
                            />

                        <LinearLayout
                            android:visibility="gone"

                            android:id="@+id/ll_signup_line"
                            android:layout_marginTop="10dp"
                            android:layout_width="50dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="@color/theme_color"

                            android:orientation="horizontal"/>


                    </LinearLayout>



                </LinearLayout>

<!--                <View-->
<!--                    android:layout_marginTop="15dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="0.5dp"-->
<!--                    android:background="@color/background_black_line"/>-->

                <!--Login-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll_signin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:background="@drawable/vehcile_plat_border"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_mail"
                            android:tint="@color/theme_primary_light"
                            />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_email"
                            android:background="@null"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/nexa_light"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:hint="Enter email"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/vehcile_plat_border"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/lock"
                            android:tint="@color/theme_primary_light"
                            />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_pass"
                            android:background="@null"
                            android:inputType="textPassword"
                            android:fontFamily="@font/nexa_light"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:hint="Enter password"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnSignIn"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="23dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rectangle_solid"
                            android:text="Next"
                            android:textColor="#fff"
                            android:fontFamily="@font/nexa_bold"
                            android:textSize="20sp"
                            />





                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_height="wrap_content">


        <TextView
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have account?"
            android:fontFamily="@font/nexa_bold"
            android:textSize="18dp"
            />


        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Create one"
            android:id="@+id/tv_signup"
            android:textColor="@color/theme_primary_light"
            android:fontFamily="@font/nexa_bold"
            android:textSize="18dp"
            />

        </LinearLayout>

    </LinearLayout>


</ScrollView>