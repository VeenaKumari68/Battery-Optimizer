<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Signup">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_below="@id/cardMain"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/lighting"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Battery Optimizer"
                android:textColor="#000"
                android:fontFamily="@font/nexa_bold"
                android:textSize="22dp"
                />


        </LinearLayout>



    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="450dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lighting"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Battery Optimizer"
                android:textColor="#000"
                android:fontFamily="@font/nexa_bold"
                android:textSize="22dp"
                />


        </LinearLayout>



        <android.support.v7.widget.CardView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardMain"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Tabs-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/tab_signin"
                            android:layout_marginTop="10dp"
                            android:text="Sign Up"
                            android:textColor="#000"
                            android:fontFamily="@font/nexa_bold"
                            android:textSize="22dp"
                            />

                        <LinearLayout
                            android:id="@+id/ll_signin_line"
                            android:layout_marginTop="15dp"
                            android:layout_width="100dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:background="@color/color_primary"
                            android:orientation="horizontal"/>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/background_black_line"/>

                <!--Login-->
                <LinearLayout
                    android:id="@+id/ll_signin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="18dp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:padding="10dp"
                        android:background="@drawable/vehcile_plat_border"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_edit"
                            android:tint="@color/color_primary"
                            />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_name"
                            android:background="@null"
                            android:fontFamily="@font/nexa_light"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:hint="Enter name"
                            />

                    </LinearLayout>






                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="18dp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:padding="10dp"
                        android:background="@drawable/vehcile_plat_border"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_mail"
                            android:tint="@color/color_primary"
                            />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_email"
                            android:background="@null"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/nexa_light"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:hint="Enter email"
                            />


                    </LinearLayout>


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="18dp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:padding="10dp"
                        android:background="@drawable/vehcile_plat_border"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/lock"
                            android:tint="@color/color_primary"

                            />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_pass"
                            android:background="@null"
                            android:inputType="textPassword"
                            android:fontFamily="@font/nexa_light"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:hint="Enter password"
                            />


                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="18dp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:padding="10dp"
                        android:background="@drawable/vehcile_plat_border"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/lock"
                            android:tint="@color/color_primary"

                            />

                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_cpass"
                            android:background="@null"
                            android:inputType="textPassword"
                            android:fontFamily="@font/nexa_light"
                            android:textSize="18dp"
                            android:textColor="#000"
                            android:hint="Enter confirm password"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnSignup"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="23dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/rectangle_solid"
                            android:text="Sign up"
                            android:textColor="#fff"
                            android:fontFamily="@font/nexa_bold"
                            android:textSize="20sp"
                            />


                        <ProgressBar
                            android:visibility="gone"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:id="@+id/pg_loading_signup"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:indeterminateTint="@color/theme_color"
                            android:layout_centerInParent="true"
                            />

                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>




    </RelativeLayout>


    </LinearLayout>

</ScrollView>